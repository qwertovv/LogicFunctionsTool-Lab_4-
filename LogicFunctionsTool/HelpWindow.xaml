<Window x:Class="LogicFunctionsTool.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка - Инструмент логических функций" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Инструкция по использованию приложения" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Содержание справки -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Вкладка "По номеру" -->
                <GroupBox Header="📊 Вкладка 'По номеру'" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Эта вкладка позволяет задать логическую функцию по её номеру." 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="Параметры:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="• Число переменных (n) - количество входных переменных (1-4)" 
                                   Margin="10,2"/>
                        <TextBlock Text="• Номер функции - десятичное число от 0 до 2^(2^n)-1" 
                                   Margin="10,2"/>
                        <TextBlock Text="Функция генерирует:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="• Таблицу истинности" Margin="10,2"/>
                        <TextBlock Text="• ДНФ (Дизъюнктивную Нормальную Форму)" Margin="10,2"/>
                        <TextBlock Text="• КНФ (Конъюнктивную Нормальную Форму)" Margin="10,2"/>
                    </StackPanel>
                </GroupBox>

                <!-- Вкладка "По формуле" -->
                <GroupBox Header="📝 Вкладка 'По формуле'" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Позволяет ввести логическую функцию в виде формулы." 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="Поддерживаемые операторы:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="• ! или not - отрицание" Margin="10,2"/>
                        <TextBlock Text="• &amp; или and - конъюнкция (И)" Margin="10,2"/>
                        <TextBlock Text="• | или or - дизъюнкция (ИЛИ)" Margin="10,2"/>
                        <TextBlock Text="• ^ или xor - исключающее ИЛИ" Margin="10,2"/>
                        <TextBlock Text="• -&gt; - импликация" Margin="10,2"/>
                        <TextBlock Text="• = - эквивалентность" Margin="10,2"/>
                        <TextBlock Text="Примеры формул:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="• x1 &amp; x2" Margin="10,2" FontFamily="Consolas"/>
                        <TextBlock Text="• (x1 | x2) -&gt; x3" Margin="10,2" FontFamily="Consolas"/>
                        <TextBlock Text="• !x1 &amp; (x2 | x3)" Margin="10,2" FontFamily="Consolas"/>
                    </StackPanel>
                </GroupBox>

                <!-- Вкладка "Сравнение" -->
                <GroupBox Header="⚖️ Вкладка 'Сравнение'" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Позволяет проверить эквивалентность двух логических функций." 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="Как использовать:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="1. Введите первую функцию (по номеру или формуле)" Margin="10,2"/>
                        <TextBlock Text="2. Введите вторую функцию" Margin="10,2"/>
                        <TextBlock Text="3. Нажмите 'Эквивалентны?'" Margin="10,2"/>
                        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,5"/>
                        <TextBlock Text="• Если функции эквивалентны - будет показано сообщение" Margin="10,2"/>
                        <TextBlock Text="• Если не эквивалентны - будет показано контр-слово (набор значений переменных, на котором функции различаются)" Margin="10,2"/>
                    </StackPanel>
                </GroupBox>

                <!-- Важные замечания -->
                <GroupBox Header="⚠️ Важные замечания">
                    <StackPanel>
                        <TextBlock Text="• При количестве переменных больше 4 время вычислений может значительно увеличиться" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="• Все формулы автоматически преобразуются в базис {¬, ∧, ∨}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="• Для ДНФ и КНФ показывается количество литералов, конъюнктов и дизъюнктов" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="• Можно копировать результаты ДНФ/КНФ в буфер обмена" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" 
                Content="Закрыть" 
                Width="80" 
                Height="25" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>